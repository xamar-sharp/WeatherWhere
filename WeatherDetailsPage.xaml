<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherWhere.WeatherDetailsPage" Title="Детали о погоде">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="10" VerticalOptions="CenterAndExpand">
                <Frame BackgroundColor="#BBFFFFFF">
                    <Label Text="{Binding FormattedInfo}" FontSize="{DynamicResource TitleFontSize}" LineHeight="2"
                VerticalOptions="CenterAndExpand" FontFamily="HelveticaNeue"
                HorizontalOptions="CenterAndExpand" />
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>